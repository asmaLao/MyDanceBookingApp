{{>partials/header}}
<p class="text-center text-muted">Here you can update or delete your dance courses.</p>
{{#courses}}
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">{{name}}</h5>
      <p class="card-text">{{description}}</p>
      <ul>
        <li><strong>Duration:</strong> {{duration}}</li>
        <li><strong>Start Date:</strong> {{startDate}}</li>
        <li><strong>Price:</strong> Â£{{price}}</li>
        <li><strong>Location:</strong> {{location}}</li>
      </ul>
      <!-- Admin controls -->
      <div class="d-flex gap-2 flex-wrap mt-2">  
            <a href="/courses/edit/{{_id}}" class="btn btn-warning btn-sm">Edit</a>
            <form action="/courses/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this course?');">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
            
            <a href="/courses/{{_id}}/classlist" class="btn btn-info btn-sm">View Class List</a>
      </div>  

    </div>
  </div>
{{/courses}}

{{^courses}}
  <p>No courses available yet.</p>
{{/courses}}

{{>partials/footer}}
