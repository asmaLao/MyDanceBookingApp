{{>partials/header}}

<h2 class="text-center">{{title}}</h2>

<!-- Add new organiser -->
<div class="card mb-4">
  <div class="card-body">
    <h5 class="card-title">Add New Organiser</h5>
    <form action="/organisers/add" method="POST">
      <div class="form-group">
        <label for="username">Username:</label>
        <input type="text" class="form-control" name="username" required>
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" class="form-control" name="password" required>
      </div>
      <button type="submit" class="btn btn-success mt-2">Add Organiser</button>
    </form>
  </div>
</div>

<!-- List existing organisers -->
<h5>Existing Organisers</h5>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#organisers}}
      <tr>
        <td>{{username}}</td>
        <td>
          <form action="/organisers/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this organiser?');">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </td>
      </tr>
    {{/organisers}}
    {{^organisers}}
      <tr><td colspan="2">No organisers found.</td></tr>
    {{/organisers}}
  </tbody>
</table>

<a href="/organiser" class="btn btn-secondary mt-3">Back to Dashboard</a>

{{>partials/footer}}
